<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/top_ll"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center">
        <Button
            android:id="@+id/check_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检查"/>
        <Button
            android:id="@+id/reset_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:text="重置"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/left_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp">
        <Button
            android:id="@+id/stick_tan_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="碳棒1"/>
        <Button
            android:id="@+id/stick_tie_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="铁棒1"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/stick_tong_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="铜棒1"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp">
        <Button
            android:id="@+id/stick_tan_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="碳棒2"/>
        <Button
            android:id="@+id/stick_tie_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="铁棒2"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/stick_tong_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="铜棒2"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_ll"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center">
        <Button
            android:id="@+id/liquid_lvhuana_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="氯化钠溶液"/>
        <Button
            android:id="@+id/liquid_zhetang_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:text="蔗糖溶液"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/left_ll"
        android:layout_toLeftOf="@id/right_ll"
        android:gravity="center"
        android:layout_below="@id/top_ll"
        android:layout_above="@id/bottom_ll">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <RelativeLayout
            android:id="@+id/center_rl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <ImageView
                android:id="@+id/liquid_iv"
                android:layout_width="220dp"
                android:layout_height="110dp"
                android:src="@mipmap/liquid_na"
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:visibility="visible"/>
            <ImageView
                android:id="@+id/light_iv"
                android:layout_width="95dp"
                android:layout_height="80dp"
                android:src="@mipmap/light_on"
                android:layout_alignTop="@id/liquid_iv"
                android:layout_marginTop="-90dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:visibility="visible"/>
            <ImageView
                android:id="@+id/stick_1_iv"
                android:layout_width="25dp"
                android:layout_height="120dp"
                android:layout_alignLeft="@id/liquid_iv"
                android:layout_marginLeft="60dp"
                android:layout_alignTop="@id/liquid_iv"
                android:layout_marginTop="-20dp"
                android:src="@mipmap/stick_tan"
                android:scaleType="fitXY"
                android:visibility="visible"/>
            <ImageView
                android:id="@+id/stick_2_iv"
                android:layout_width="25dp"
                android:layout_height="120dp"
                android:layout_alignRight="@id/liquid_iv"
                android:layout_marginRight="60dp"
                android:layout_alignTop="@id/liquid_iv"
                android:layout_marginTop="-20dp"
                android:src="@mipmap/stick_tong"
                android:scaleType="fitXY"
                android:visibility="visible"/>
        </RelativeLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>